<div class="page-content">
    <h2 class="mb-4 text-center">Courses</h2>
    <div class="row">
        {{#courses}}
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <ul class="list-unstyled">
                            <li><strong>Duration:</strong> {{duration}}</li>
                            <li><strong>Schedule:</strong> {{schedule}}</li>
                            <li><strong>Price:</strong> Â£{{price}}</li>
                        </ul>
                        <a href="/bookCourse?course={{_id}}" class="btn btn-outline-primary">Book Full Course</a>
                    </div>
                </div>
            </div>
        {{/courses}}
    </div>

    {{#pagination.show}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#pagination.hasPrev}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.prevPage}}">Previous</a>
                    </li>
                {{/pagination.hasPrev}}
                {{#pagination.pages}}
                    <li class="page-item {{#active}}active{{/active}}">
                        <a class="page-link" href="?page={{number}}">{{number}}</a>
                    </li>
                {{/pagination.pages}}
                {{#pagination.hasNext}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.nextPage}}">Next</a>
                    </li>
                {{/pagination.hasNext}}
            </ul>
        </nav>
    {{/pagination.show}}
</div>
