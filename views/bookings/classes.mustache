<div class="page-content container py-5">
    <h2 class="mb-5 text-center display-5 fw-bold">Ad-Hoc Classes</h2>
    <div class="row g-4">
        {{#classes}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-lg">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text text-muted flex-grow-1">{{description}}</p>
                        <ul class="list-unstyled mb-4">
                            <li>
                                <i class="bi bi-geo-alt-fill text-secondary me-2"></i>
                                <strong>Location:</strong> {{location}}
                            </li>
                            <li>
                                <i class="bi bi-currency-pound text-secondary me-2"></i>
                                <strong>Price:</strong> Â£{{price}}
                            </li>
                        </ul>
                        <a href="/bookClass?class={{_id}}" class="btn btn-outline-primary">Book Class</a>
                    </div>
                </div>
            </div>
        {{/classes}}
    </div>

    {{#pagination.show}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#pagination.hasPrev}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.prevPage}}">Previous</a>
                    </li>
                {{/pagination.hasPrev}}
                {{#pagination.pages}}
                    <li class="page-item {{#active}}active{{/active}}">
                        <a class="page-link" href="?page={{number}}">{{number}}</a>
                    </li>
                {{/pagination.pages}}
                {{#pagination.hasNext}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.nextPage}}">Next</a>
                    </li>
                {{/pagination.hasNext}}
            </ul>
        </nav>
    {{/pagination.show}}
</div>
