<div class="modal fade" id="timeslotManagementModal" tabindex="-1" aria-labelledby="timeslotManagementModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/classes/timeslots/update" method="POST" novalidate>
                <div class="modal-header">
                    <h5 class="modal-title" id="timeslotManagementModalLabel">Timeslot Management for <span id="tmClassName"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="tmClassId" name="classId" value="">
                    <div class="mb-3">
                        <label class="form-label">Existing Timeslots:</label>
                        <div id="tmTimeslotList" class="d-flex flex-wrap gap-2">
                            <!-- The list will be populated dynamically -->
                            <p>No timeslots available</p>
                        </div>
                    </div>
                    <hr>
                    <h6>Add New Timeslot</h6>
                    <div class="mb-3">
                        <label for="tmDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="tmDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Time Range</label>
                        <div class="row">
                            <div class="col">
                                <input type="time" class="form-control" id="tmStartTime" required>
                            </div>
                            <div class="col">
                                <input type="time" class="form-control" id="tmEndTime" required>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-outline-primary mb-3" id="tmAddBtn">Add Timeslot</button>
                    <!-- Hidden field to hold the timeslot CSV (if needed on submit) -->
                    <input type="hidden" id="tmTimeslotsCSV" name="timeslotsCSV" value="">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Timeslots</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript to populate the timeslot list when the modal opens -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var timeslotModalEl = document.getElementById('timeslotManagementModal');

        // Listen for the Bootstrap modal 'show' event.
        timeslotModalEl.addEventListener('show.bs.modal', function(event) {
            // The button that triggered the modal (it must have our data attributes)
            var triggerButton = event.relatedTarget;
            if (!triggerButton) {
                return;
            }

            // Extract data attributes from the trigger button.
            var classId = triggerButton.getAttribute('data-class-id') || "";
            var className = triggerButton.getAttribute('data-class-name') || "";
            var timeslotsCSV = triggerButton.getAttribute('data-timeslots') || "";

            // Update modal fields with the class data.
            document.getElementById('tmClassId').value = classId;
            document.getElementById('tmClassName').textContent = className;
            document.getElementById('tmTimeslotsCSV').value = timeslotsCSV;

            // Populate the timeslot list.
            var timeslotListEl = document.getElementById('tmTimeslotList');
            if (timeslotsCSV.trim() !== "") {
                // Split the CSV into an array and trim any whitespace.
                var timeslots = timeslotsCSV.split(',').map(function(ts) { return ts.trim(); });
                var htmlContent = "";
                timeslots.forEach(function(ts) {
                    htmlContent += '<button type="button" class="btn btn-outline-secondary">' + ts + '</button>';
                });
                timeslotListEl.innerHTML = htmlContent;
            } else {
                timeslotListEl.innerHTML = '<p>No timeslots available</p>';
            }
        });
    });
</script>
