<div class="page-content">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Login</h2>
            <form action="/auth/login" method="POST" class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" id="email" name="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-outline-primary">Login</button>
            </form>
            <p class="mt-3 text-center">Or login with:</p>
            <div class="d-flex justify-content-center">
                    <a href="/auth/github" class="btn btn-dark me-2">Login with GitHub</a>
            </div>
            <p class="mt-3 text-center">Don't have an account? <a href="/auth/register">Register here!</a></p>
        </div>
    </div>
</div>
