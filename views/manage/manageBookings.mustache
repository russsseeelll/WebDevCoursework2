<!-- views/manageBookings.mustache -->
<div class="page-content">
    <h2 class="mb-4">My Bookings</h2>
    {{#bookings.length}}
        <table class="table">
            <thead>
            <tr>
                <th>Type</th>
                <th>Name</th>
                <th>Location</th>
                <th>Contact Email</th>
                <th>Contact Mobile</th>
                <th>Frequency / Time</th>
                <th>End Date</th>
                <th>Date Booked</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#bookings}}
                <tr>
                    <td>{{bookingType}}</td>
                    <td>{{itemName}}</td>
                    <td>{{location}}</td>
                    <td>{{contactEmail}}</td>
                    <td>{{contactMobile}}</td>
                    <td>{{extraInfo}}</td>
                    <td>{{courseEndDate}}</td>
                    <td>{{formattedDate}}</td>
                    <td>
                        <form action="/cancelBooking" method="POST" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                            <input type="hidden" name="bookingId" value="{{_id}}">
                            <button type="submit" class="btn btn-outline-primary btn-sm">Cancel</button>
                        </form>
                    </td>
                </tr>
            {{/bookings}}
            </tbody>
        </table>
    {{/bookings.length}}
    {{^bookings.length}}
        <p>You have no bookings.</p>
    {{/bookings.length}}
</div>
